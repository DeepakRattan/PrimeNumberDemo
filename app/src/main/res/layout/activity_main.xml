<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deepakrattan.primenumberdemo.MainActivity">

    <EditText
        android:id="@+id/edtLowerLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter lower limit of prime number" />


    <EditText
        android:id="@+id/edtUpperlimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtLowerLimit"
        android:hint="Enter upper limit of prime number" />

    <Button
        android:id="@+id/btnPrime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtUpperlimit"
        android:text="Print Prime Number within the specified range" />

    <TextView
        android:id="@+id/txtPrime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPrime"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />
</RelativeLayout>
